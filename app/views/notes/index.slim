h2.title
  | NOTES &nbsp;
  a.btn.btn-default.btn-pill href="/notes/new"
    i.fa.fa-plus
    | &nbsp; Add note

table.table.pretty-table
  thead
    th = sort_link @q, :person, ['person_name'], 'Person'
    th = sort_link @q, :type
    th = sort_link @q, :value
    th = sort_link @q, :created_at, 'Created'
    th = sort_link @q, :updated_at, 'Updated'
    th colspan="2" Actions

  tbody.js-loadable-list
    = render 'table'

= render 'shared/load_button', collection: @notes
